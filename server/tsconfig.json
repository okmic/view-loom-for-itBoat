{
    "type": "module",
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
    },
    "include": [
      "src/**/*", 
      "src/**/*.ts",
      "src/**/*.d.ts", 
      "src/types/**/*.d.ts",
      "types/**/*"
      
    ],
    "exclude": ["node_modules", "build"]
  }
  